<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hello <%= name%></title>
</head>
<body>
    

    <table border="1" align="center">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Phone</th>
            <th>Address</th>
        </tr>

        <% users.map((user,index) => { %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.password %></td>
                <td><%= user.phone %></td>
                <td><%= user.address %></td>
                <td><button><a href="/editUser?id=<%= user.id%>">Edit</a></button></td>
                <td><button><a href="/deleteUser?id=<%= user.id%>">Delete</a></button></td>
            </tr>  
        <%})%>
    </table>

    <button align="center"><a href="/form">Add User</a></button>
</body>
</html>