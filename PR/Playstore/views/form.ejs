<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Publish Game - Google Play Console</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        :root {
            --google-green: #01875f;
            --google-blue: #1a73e8;
            --bg-color: #f8f9fa;
            --border-color: #dadce0;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--bg-color);
            color: #202124;
        }

        /* Card Styling */
        .form-card {
            background: white;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            box-shadow: 0 1px 2px rgba(60,64,67,0.3);
            overflow: hidden;
        }

        .card-header-custom {
            padding: 24px;
            border-bottom: 1px solid var(--border-color);
            background: white;
        }

        /* Input Styling */
        .form-control, .form-select {
            border-radius: 4px;
            border: 1px solid var(--border-color);
            padding: 12px;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--google-blue); /* Google Blue focus state */
            box-shadow: 0 0 0 2px rgba(26, 115, 232, 0.2);
        }

        /* Floating Labels adjustment for Bootstrap */
        .form-floating > label {
            padding-left: 12px;
            color: #5f6368;
        }

        /* File Upload Custom Styling */
        .upload-zone {
            border: 2px dashed var(--border-color);
            border-radius: 8px;
            padding: 20px;
            text-align: center;
            transition: all 0.2s;
            background-color: #fafafa;
            cursor: pointer;
            position: relative;
        }

        .upload-zone:hover {
            background-color: #f1f3f4;
            border-color: #5f6368;
        }

        .upload-zone input[type="file"] {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            opacity: 0;
            cursor: pointer;
        }

        /* Image Previews */
        .preview-img {
            max-width: 100%;
            border-radius: 8px;
            display: none; /* Hidden by default */
            margin-top: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .btn-submit {
            background-color: var(--google-green);
            border: none;
            padding: 10px 24px;
            font-weight: 500;
        }
        
        .btn-submit:hover {
            background-color: #016e4d;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-light bg-white border-bottom mb-4">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center text-secondary" href="/">
                <i class="bi bi-arrow-left me-2"></i> Back to Dashboard
            </a>
            <span class="navbar-text fw-bold text-dark">
                Create New Listing
            </span>
        </div>
    </nav>

    <div class="container pb-5" style="max-width: 800px;">
        <form method="post" action="/addGame" enctype="multipart/form-data">
            
            <div class="form-card">
                <div class="card-header-custom">
                    <h4 class="m-0">Game Details</h4>
                    <p class="text-secondary small m-0 mt-1">Enter the information as it will appear on the store.</p>
                </div>

                <div class="p-4">
                    <div class="row g-4">
                        
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="gameName" name="name" placeholder="Game Name" required>
                                <label for="gameName">Game Title</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <select class="form-select" id="category" name="category" onchange="loadSubCategory()" required>
                                    <option value="" selected>Select Category</option>
                                    <option value="action">Action</option>
                                    <option value="adventure">Adventure</option>
                                    <option value="arcade">Arcade</option>
                                    <option value="puzzle">Puzzle</option>
                                    <option value="strategy">Strategy</option>
                                    <option value="rpg">RPG</option>
                                    <option value="simulation">Simulation</option>
                                    <option value="sports">Sports</option>
                                    <option value="casual">Casual</option>
                                    <option value="racing">Racing</option>
                                    <option value="educational">Educational</option>
                                    <option value="music">Music</option>
                                </select>
                                <label for="category">Category</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <select class="form-select" id="subcategory" name="sub_category" required>
                                    <option value="">Select Category First</option>
                                </select>
                                <label for="subcategory">Sub Category</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="number" class="form-control" name="rating" placeholder="4.5" min="0" max="5" step="0.1" required>
                                <label>Initial Rating (0-5)</label>
                            </div>
                        </div>

                        <div class="col-12"><hr class="text-secondary opacity-25"></div>

                        <div class="col-12">
                            <h6 class="fw-bold mb-3">Graphic Assets</h6>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label small text-secondary fw-bold">App Icon (Logo)</label>
                            <div class="upload-zone" id="logoZone">
                                <input type="file" name="logo" accept="image/*" onchange="previewFile(this, 'logoPreview', 'logoZone')">
                                <i class="bi bi-box-arrow-in-down fs-2 text-secondary"></i>
                                <div class="small text-secondary mt-2">Drop or Click</div>
                            </div>
                            <img id="logoPreview" class="preview-img" width="100" height="100" style="object-fit: cover;">
                        </div>

                        <div class="col-md-8">
                            <label class="form-label small text-secondary fw-bold">Feature Graphic (Banner)</label>
                            <div class="upload-zone" id="bannerZone">
                                <input type="file" name="image" accept="image/*" onchange="previewFile(this, 'bannerPreview', 'bannerZone')">
                                <i class="bi bi-card-image fs-2 text-secondary"></i>
                                <div class="small text-secondary mt-2">Drop or Click to upload banner</div>
                            </div>
                            <img id="bannerPreview" class="preview-img" style="width: 100%; height: 180px; object-fit: cover;">
                        </div>

                    </div>
                </div>

                <div class="bg-light p-3 border-top d-flex justify-content-end gap-2">
                    <a href="/" class="btn btn-outline-secondary border-0">Cancel</a>
                    <button type="submit" class="btn btn-primary btn-submit">Save & Publish</button>
                </div>
            </div>

        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // 1. Image Preview Logic
        function previewFile(input, previewId, zoneId) {
            const preview = document.getElementById(previewId);
            const zone = document.getElementById(zoneId);
            const file = input.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block'; // Show image
                    
                    // Optional: Style the zone to show success
                    zone.style.borderColor = '#01875f';
                    zone.style.backgroundColor = '#e6f3ef';
                }
                reader.readAsDataURL(file);
            }
        }

        // 2. Sub Category Logic (Optimized)
        function loadSubCategory() {
            let category = document.getElementById("category").value;
            let subCategory = document.getElementById("subcategory");

            // Reset Subcategory
            subCategory.innerHTML = "<option value=''>Select Sub Category</option>";

            let data = {
                action: ["Shooter", "Fighting", "Platformer", "Survival", "Stealth"],
                adventure: ["Story Based", "Open World", "Exploration", "Point & Click"],
                arcade: ["Retro", "Endless Runner", "Classic", "Brick Breaker"],
                puzzle: ["Logic", "Word", "Math", "Brain Teasers", "Jigsaw"],
                strategy: ["RTS", "Turn Based", "Tower Defense", "War Strategy"],
                rpg: ["Action RPG", "MMORPG", "Turn Based RPG", "Fantasy RPG"],
                simulation: ["Life Simulation", "City Building", "Farming", "Flight Simulation"],
                sports: ["Cricket", "Football", "Basketball", "Racing", "Tennis"],
                casual: ["Time Killer", "Family", "Kids", "Simple Games"],
                racing: ["Car Racing", "Bike Racing", "Drag Racing", "Offroad Racing"],
                educational: ["Learning", "Quiz", "Kids Education", "Coding Games"],
                music: ["Rhythm", "Piano", "Guitar", "Dance"]
            };

            if (category && data[category]) {
                data[category].forEach(item => {
                    let option = document.createElement("option");
                    // Create a cleaner value (lowercase, no spaces)
                    option.value = item; 
                    option.text = item;
                    subCategory.appendChild(option);
                });
            }
        }
    </script>
</body>
</html>