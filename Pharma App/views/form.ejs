<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Medicine - Darshil Pharma</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --pharma-blue: #0d6efd;
            --pharma-light-blue: #e7f1ff;
            --pharma-green: #198754;
            --pharma-red: #dc3545;
            --pharma-warning: #ffc107;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            min-height: 100vh;
        }
        
        .sidebar {
            min-height: 100vh;
            background: linear-gradient(180deg, var(--pharma-blue) 0%, #0a58ca 100%);
            color: white;
            padding: 0;
            position: fixed;
            width: 250px;
            z-index: 1000;
            box-shadow: 3px 0 10px rgba(0,0,0,0.1);
        }
        
        .main-content {
            margin-left: 250px;
            padding: 20px;
            width: calc(100% - 250px);
        }
        
        .logo-container {
            padding: 20px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            text-align: center;
        }
        
        .logo {
            font-size: 1.8rem;
            font-weight: 700;
            color: white;
            text-decoration: none;
        }
        
        .logo span {
            color: #a5d8ff;
        }
        
        .nav-menu {
            padding: 20px 0;
        }
        
        .nav-item {
            margin-bottom: 5px;
        }
        
        .nav-link {
            color: rgba(255,255,255,0.8);
            padding: 12px 20px;
            display: flex;
            align-items: center;
            transition: all 0.3s;
            text-decoration: none;
        }
        
        .nav-link:hover, .nav-link.active {
            color: white;
            background-color: rgba(255,255,255,0.1);
            border-left: 4px solid white;
        }
        
        .nav-icon {
            width: 24px;
            margin-right: 10px;
            text-align: center;
        }
        
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            margin-bottom: 30px;
            border-bottom: 1px solid #dee2e6;
        }
        
        .page-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--pharma-blue);
        }
        
        .card {
            border-radius: 10px;
            border: none;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            margin-bottom: 25px;
            overflow: hidden;
        }
        
        .card-header {
            background-color: white;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding: 15px 20px;
            font-weight: 600;
            color: var(--pharma-blue);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .form-container {
            max-width: 800px;
            margin: 0 auto;
        }
        
        .form-section {
            background: white;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }
        
        .form-title {
            color: var(--pharma-blue);
            font-weight: 600;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid var(--pharma-light-blue);
        }
        
        .form-group {
            margin-bottom: 25px;
        }
        
        .form-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 8px;
            display: block;
        }
        
        .required:after {
            content: " *";
            color: var(--pharma-red);
        }
        
        .form-control, .form-select {
            border: 1px solid #ced4da;
            border-radius: 8px;
            padding: 12px 15px;
            font-size: 1rem;
            transition: all 0.3s;
            width: 100%;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: var(--pharma-blue);
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
            outline: none;
        }
        
        .form-control:hover, .form-select:hover {
            border-color: #86b7fe;
        }
        
        .form-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }
        
        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #e9ecef;
        }
        
        .btn {
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s;
            border: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
        }
        
        .btn-primary {
            background-color: var(--pharma-blue);
            color: white;
        }
        
        .btn-primary:hover {
            background-color: #0b5ed7;
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(13, 110, 253, 0.2);
        }
        
        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }
        
        .btn-secondary:hover {
            background-color: #5c636a;
            transform: translateY(-2px);
        }
        
        .btn-outline {
            background-color: transparent;
            border: 1px solid #dee2e6;
            color: #6c757d;
        }
        
        .btn-outline:hover {
            background-color: #f8f9fa;
            border-color: var(--pharma-blue);
            color: var(--pharma-blue);
        }
        
        .btn i {
            margin-right: 8px;
        }
        
        .file-upload-container {
            border: 2px dashed #dee2e6;
            border-radius: 8px;
            padding: 30px;
            text-align: center;
            transition: all 0.3s;
            background-color: #f8f9fa;
        }
        
        .file-upload-container:hover {
            border-color: var(--pharma-blue);
            background-color: var(--pharma-light-blue);
        }
        
        .file-upload-label {
            cursor: pointer;
            display: block;
        }
        
        .file-upload-icon {
            font-size: 2.5rem;
            color: var(--pharma-blue);
            margin-bottom: 15px;
        }
        
        .file-input {
            display: none;
        }
        
        .file-preview {
            margin-top: 20px;
            display: none;
        }
        
        .preview-image {
            max-width: 150px;
            max-height: 150px;
            border-radius: 8px;
            border: 1px solid #dee2e6;
            margin: 0 auto;
            display: block;
        }
        
        .form-help-text {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 5px;
        }
        
        .status-indicator {
            display: inline-flex;
            align-items: center;
            margin-left: 10px;
            font-size: 0.9rem;
            padding: 4px 10px;
            border-radius: 50px;
        }
        
        .status-in-stock {
            background-color: #d1e7dd;
            color: #0f5132;
        }
        
        .status-out-of-stock {
            background-color: #f8d7da;
            color: #721c24;
        }
        
        .footer {
            text-align: center;
            padding: 20px;
            color: #6c757d;
            font-size: 0.9rem;
            margin-top: 30px;
            border-top: 1px solid #dee2e6;
        }
        
        .alert {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid transparent;
        }
        
        .alert-info {
            background-color: var(--pharma-light-blue);
            border-color: var(--pharma-blue);
            color: #084298;
        }
        
        @media (max-width: 992px) {
            .sidebar {
                width: 70px;
            }
            
            .main-content {
                margin-left: 70px;
                width: calc(100% - 70px);
            }
            
            .logo-text, .nav-text {
                display: none;
            }
            
            .logo-container {
                padding: 15px 5px;
            }
            
            .nav-link {
                justify-content: center;
                padding: 15px 5px;
            }
            
            .nav-icon {
                margin-right: 0;
                font-size: 1.2rem;
            }
        }
        
        @media (max-width: 768px) {
            .form-row {
                grid-template-columns: 1fr;
            }
            
            .form-actions {
                flex-direction: column;
            }
            
            .btn {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="logo-container">
            <a href="/" class="logo"><i class="fas fa-pills nav-icon"></i> <span class="logo-text">Darshil Pharma</span></a>
        </div>
        
        <div class="nav-menu">
            <div class="nav-item">
                <a href="/" class="nav-link">
                    <i class="fas fa-table nav-icon"></i>
                    <span class="nav-text">Medicine Inventory</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/addMedicine" class="nav-link active">
                    <i class="fas fa-plus-circle nav-icon"></i>
                    <span class="nav-text">Add Medicine</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-chart-line nav-icon"></i>
                    <span class="nav-text">Analytics</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-boxes nav-icon"></i>
                    <span class="nav-text">Suppliers</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-cogs nav-icon"></i>
                    <span class="nav-text">Settings</span>
                </a>
            </div>
        </div>
        
        <div class="user-info" style="padding: 20px; position: absolute; bottom: 0; width: 100%; border-top: 1px solid rgba(255,255,255,0.1);">
            <div class="d-flex align-items-center">
                <div class="me-3">
                    <i class="fas fa-user-circle" style="font-size: 2rem;"></i>
                </div>
                <div>
                    <div style="font-weight: 600;">Admin User</div>
                    <div style="font-size: 0.8rem; opacity: 0.8;">System Administrator</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="main-content">
        <div class="header">
            <div>
                <h1 class="page-title">Add New Medicine</h1>
                <p class="text-muted">Add a new medicine to the pharmacy inventory</p>
            </div>
            
            <div>
                <a href="/" class="btn btn-outline">
                    <i class="fas fa-arrow-left"></i> Back to Inventory
                </a>
            </div>
        </div>
        
        <div class="form-container">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                Please fill in all required fields marked with an asterisk (*). Ensure all information is accurate.
            </div>
            
            <div class="form-section">
                <h3 class="form-title">Medicine Information</h3>
                
                <form action="/addMedicine" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label required">Medicine Name</label>
                            <input type="text" name="name" class="form-control" placeholder="Enter medicine name" required>
                            <div class="form-help-text">Enter the brand or generic name of the medicine</div>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label required">Manufacturer</label>
                            <input type="text" name="manufacturer" class="form-control" placeholder="Enter manufacturer name" required>
                            <div class="form-help-text">Pharmaceutical company that produces this medicine</div>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label required">Manufacturing Date</label>
                            <input type="date" name="mfg_date" class="form-control" required>
                            <div class="form-help-text">Date when the medicine was manufactured</div>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label required">Expiry Date</label>
                            <input type="date" name="exp_date" class="form-control" required>
                            <div class="form-help-text">Date when the medicine expires</div>
                        </div>
                    </div>
                    
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label required">Stock Status</label>
                            <select name="status" class="form-select" required>
                                <option value="">Select stock status</option>
                                <option value="In Stock">In Stock</option>
                                <option value="Low Stock">Low Stock</option>
                                <option value="Out of Stock">Out of Stock</option>
                                <option value="Discontinued">Discontinued</option>
                            </select>
                            <div class="form-help-text">Current availability status of this medicine</div>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label required">Quantity</label>
                            <input type="number" name="quantity" class="form-control" placeholder="Enter quantity" min="0" required>
                            <div class="form-help-text">Number of units currently available</div>
                        </div>
                    </div>
                    
                    
                    <div class="form-group">
                        <label class="form-label">Medicine Image</label>
                        <div class="file-upload-container">
                            <label class="file-upload-label">
                                <div class="file-upload-icon">
                                    <i class="fas fa-cloud-upload-alt"></i>
                                </div>
                                <div class="mb-2">
                                    <strong>Click to upload medicine image</strong>
                                </div>
                                <div class="text-muted mb-3">
                                    Supports JPG, PNG formats. Max size: 5MB
                                </div>
                                <input type="file" name="img" class="file-input" id="medicineImage" accept="image/*">
                                <div class="btn btn-outline">
                                    <i class="fas fa-image"></i> Choose File
                                </div>
                            </label>
                        </div>
                        <div class="file-preview" id="imagePreview">
                            <img src="" alt="Preview" class="preview-image">
                            <div class="text-center mt-2">
                                <button type="button" class="btn btn-outline btn-sm" id="removeImage">
                                    <i class="fas fa-trash"></i> Remove Image
                                </button>
                            </div>
                        </div>
                        <div class="form-help-text">Upload an image of the medicine packaging for identification</div>
                    </div>
                    
                    <div class="form-actions">
                        <button type="reset" class="btn btn-secondary">
                            <i class="fas fa-redo"></i> Reset Form
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus-circle"></i> Add Medicine
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="footer">
            <p>Â© 2023 Darshil Pharma. All rights reserved. | Medicine Management System v2.0</p>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Image upload preview functionality
            const fileInput = document.getElementById('medicineImage');
            const imagePreview = document.getElementById('imagePreview');
            const previewImage = imagePreview.querySelector('.preview-image');
            const removeImageBtn = document.getElementById('removeImage');
            
            if (fileInput) {
                fileInput.addEventListener('change', function() {
                    if (this.files && this.files[0]) {
                        const reader = new FileReader();
                        
                        reader.onload = function(e) {
                            previewImage.src = e.target.result;
                            imagePreview.style.display = 'block';
                        }
                        
                        reader.readAsDataURL(this.files[0]);
                    }
                });
            }
            
            if (removeImageBtn) {
                removeImageBtn.addEventListener('click', function() {
                    fileInput.value = '';
                    previewImage.src = '';
                    imagePreview.style.display = 'none';
                });
            }
            
            // Form validation and date checking
            const form = document.querySelector('form');
            const mfgDateInput = document.querySelector('input[name="mfg_date"]');
            const expDateInput = document.querySelector('input[name="exp_date"]');
            
            // Set today as default for mfg date and min date for exp date
            const today = new Date().toISOString().split('T')[0];
            if (mfgDateInput) {
                mfgDateInput.min = '2020-01-01';
                mfgDateInput.max = today;
            }
            
            if (expDateInput) {
                expDateInput.min = today;
            }
            
            // Update exp date min when mfg date changes
            if (mfgDateInput && expDateInput) {
                mfgDateInput.addEventListener('change', function() {
                    expDateInput.min = this.value;
                    
                    // If exp date is earlier than mfg date, clear it
                    if (expDateInput.value && expDateInput.value < this.value) {
                        expDateInput.value = '';
                    }
                });
            }
            
            // Form submission validation
            if (form) {
                form.addEventListener('submit', function(e) {
                    let isValid = true;
                    const requiredFields = form.querySelectorAll('[required]');
                    
                    requiredFields.forEach(field => {
                        if (!field.value.trim()) {
                            isValid = false;
                            field.style.borderColor = 'var(--pharma-red)';
                            
                            // Add red border temporarily
                            setTimeout(() => {
                                field.style.borderColor = '';
                            }, 3000);
                        }
                    });
                    
                    // Check expiry date is after manufacturing date
                    if (mfgDateInput.value && expDateInput.value) {
                        if (expDateInput.value <= mfgDateInput.value) {
                            alert('Expiry date must be after manufacturing date');
                            expDateInput.style.borderColor = 'var(--pharma-red)';
                            isValid = false;
                            
                            setTimeout(() => {
                                expDateInput.style.borderColor = '';
                            }, 3000);
                        }
                    }
                    
                    if (!isValid) {
                        e.preventDefault();
                        alert('Please fill in all required fields correctly.');
                    }
                });
            }
            
            // Add focus effects to form controls
            const formControls = document.querySelectorAll('.form-control, .form-select');
            formControls.forEach(control => {
                control.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });
                
                control.addEventListener('blur', function() {
                    this.parentElement.classList.remove('focused');
                });
            });
        });
    </script>
</body>
</html>