<!-- header -->
<%- include("../header")%>


<!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms/</span> Vertical Layouts</h4>

              <!-- Basic Layout -->
              <div class="row">
                
                <div class="col-xl-6 mx-auto">
                  <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                      <h5 class="mb-0">Edit Admin</h5>
                    </div>
                    <div class="card-body">
                      <form method="post" action="/editAdmin" enctype="multipart/form-data">
                        <!-- id -->
                        <input
                              type="hidden"
                              name="id"
                              value="<%= updateAdmin.id %>"
                            />
                            <!-- isprofile -->
                              <input type="hidden" name="isProfile" value="<%= isProfile %>">
                        <!-- fname -->
                        <div class="mb-3">
                          <label class="form-label" for="basic-icon-default-fullname">First Name</label>
                          <div class="input-group input-group-merge">
                            <span id="basic-icon-default-fullname2" class="input-group-text"
                              ><i class="bx bx-user"></i
                            ></span>
                            <input
                              type="text"
                              name="fname"
                              class="form-control"
                              id="basic-icon-default-fullname"
                              placeholder="John "
                              aria-label="John "
                              aria-describedby="basic-icon-default-fullname2"
                              value="<%= updateAdmin.fname %>"
                            />
                          </div>
                        </div>

                        <!-- lname -->
                        <div class="mb-3">
                          <label class="form-label" for="basic-icon-default-fullname">Last Name</label>
                          <div class="input-group input-group-merge">
                            <span id="basic-icon-default-fullname2" class="input-group-text"
                              ><i class="bx bx-user"></i
                            ></span>
                            <input
                              type="text"
                              name="lname"
                              class="form-control"
                              id="basic-icon-default-fullname"
                              placeholder=" Doe"
                              aria-label=" Doe"
                              aria-describedby="basic-icon-default-fullname2"
                              value="<%= updateAdmin.lname %>"
                            />
                          </div>
                        </div>

                        <!-- email -->
                        <div class="mb-3">
                          <label class="form-label" for="basic-icon-default-email">Email</label>
                          <div class="input-group input-group-merge">
                            <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                            <input
                              type="email"
                              name="email"
                              id="basic-icon-default-email"
                              class="form-control"
                              placeholder="john.doe"
                              aria-label="john.doe"
                              aria-describedby="basic-icon-default-email2"
                              value="<%= updateAdmin.email %>"
                            />
                            <span id="basic-icon-default-email2" class="input-group-text">@example.com</span>
                          </div>
                          <div class="form-text">You can use letters, numbers & periods</div>
                        </div>

                        <!-- password -->
                        <!-- <div class="mb-3">
                          <label class="form-label" for="basic-icon-default-password">Password</label>
                          <div class="input-group input-group-merge">
                            <span class="input-group-text"><i class='bx  bx-lock'></i> </span>
                            <input
                              type="password"
                              name="password"
                              id="basic-icon-default-password"
                              class="form-control"
                              placeholder="john.doe"
                              aria-label="john.doe"
                              aria-describedby="basic-icon-default-password2"
                              value="<%= updateAdmin.password %>"
                            />
                          </div>
                          <div class="form-text">You can use letters, numbers & periods</div>
                        </div> -->


                        <!-- phone -->
                        <div class="mb-3">
                          <label class="form-label" for="basic-icon-default-phone">Phone No</label>
                          <div class="input-group input-group-merge">
                            <span id="basic-icon-default-phone2" class="input-group-text"
                              ><i class="bx bx-phone"></i
                            ></span>
                            <input
                              type="text"
                              name="phone"
                              id="basic-icon-default-phone"
                              class="form-control phone-mask"
                              placeholder="658 799 8941"
                              aria-label="658 799 8941"
                              aria-describedby="basic-icon-default-phone2"
                              value="<%= updateAdmin.phone %>"
                            />
                          </div>
                        </div>

                        <!-- gender -->
                        <label class="form-label" for="basic-icon-default-phone">Gender</label>
                          <div class="form-check">
                            <input
                              name="gender"
                              class="form-check-input"
                              type="radio"
                              value="Male"
                              id="defaultRadio1"
                              <% if(updateAdmin.gender == "Male"){ %> checked <%}%>
                            />
                            <label class="form-check-label" for="defaultRadio1"> Male </label>
                          </div>
                          <div class="form-check">
                            <input
                              name="gender"
                              class="form-check-input"
                              type="radio"
                              value="Female"
                              id="defaultRadio2"
                              <% if(updateAdmin.gender == "Female"){ %> checked <%}%>
                            />
                            <label class="form-check-label" for="defaultRadio2"> Female </label>
                          </div>

                          <!-- hobby -->
                          <label class="form-label mt-3" for="basic-icon-default-phone">Hobby</label>
                          <% ["Reading","Cricket","UNO","Others"].map((hobby,index) => {%>
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" <% if (updateAdmin.hobby && updateAdmin.hobby.includes(hobby)) { %>checked<% } %>  value="<%= hobby%>" name="hobby" id="defaultCheck<%= index+1%>" />
                              <label class="form-check-label" for="defaultCheck<%= index+1%>"> <%= hobby%> </label>
                            </div>
                          <%}) %>

                          <!-- city -->
                          <div class="my-3">
                            <label for="exampleFormControlSelect1" class="form-label">City</label>
                            <select class="form-select" name="city" id="exampleFormControlSelect1" aria-label="Default select example">
                              <% [
                                "Ahmedabad","Surat","Vadodara","Rajkot","Bhavnagar","Jamnagar","Junagadh",
                                "Gandhinagar","Anand","Nadiad","Morbi","Surendranagar","Mehsana","Patan",
                                "Himmatnagar","Modasa","Godhra","Dahod","Bharuch","Ankleshwar","Navsari",
                                "Valsad","Vapi","Porbandar","Dwarka","Amreli","Botad","Palanpur","Deesa",
                                "Kalol","Jetpur","Gondal","Veraval","Somnath","Bhuj","Anjar",
                                "Gandhidham","Mandvi"
                              ].map((city) => { %>
                                <option value="<%= city %>"  <% if(updateAdmin.city == city){ %> selected <%}%>><%= city %></option>
                              <% }) %>
                            </select>
                          </div>

                        <!-- Message -->
                        <div class="mb-3">
                          <label  class="form-label" for="basic-icon-default-message">Message</label>
                          <div class="input-group input-group-merge">
                            <span id="basic-icon-default-message2" class="input-group-text"
                              ><i class="bx bx-comment"></i
                            ></span>
                            <textarea
                              name="message"
                              id="basic-icon-default-message"
                              class="form-control"
                              placeholder="Hi, Do you have a moment to talk Joe?"
                              aria-label="Hi, Do you have a moment to talk Joe?"
                              aria-describedby="basic-icon-default-message2"
                              
                            ><%= updateAdmin.message %></textarea>
                          </div>
                        </div>

                        <!-- profile photo -->
                        <div class="mb-3">
                          <label for="formFile" class="form-label d-block">Profile Picture</label>
                          <img src="/<%= updateAdmin.profile_image%>" class="rounded-3 mb-2" width="50" height="50" alt="">
                          <input class="form-control" value="<%= updateAdmin.profile_image%>" name="profile_image" type="file" id="formFile" />
                        </div>
                        <button type="submit" class="btn btn-primary">Send</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- / Content -->

            



<!-- footer -->
<%- include("../footer")%>