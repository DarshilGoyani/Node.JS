<!-- header -->
<%- include("../header") %>

<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h4 class="fw-bold py-3 mb-0"><span class="text-muted fw-light">Admin Management/</span> View Admins</h4>
      <a href="/addAdmin" class="btn btn-primary">
        <i class="bx bx-plus me-1"></i> Add Admin
      </a>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-8">
            <input type="text" id="adminSearch" class="form-control" placeholder="Search admins by name or email...">
          </div>
          <div class="col-md-4">
            <select id="adminSort" class="form-select">
              <option value="newest">Newest First</option>
              <option value="oldest">Oldest First</option>
              <option value="name-asc">Name (A-Z)</option>
              <option value="name-desc">Name (Z-A)</option>
            </select>
          </div>
        </div>
      </div>
    </div>

    <!-- Hoverable Table rows -->
    <div class="card">
      <div class="table-responsive text-nowrap">
        <table class="table table-hover">
          <thead>
            <tr align="center">
              <th>No.</th>
              <th>Profile Image</th>
              <th>Name</th>
              <th>Email</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody class="table-border-bottom-0">
            <% if(admins && admins.length > 0) { %>
              <% admins.map((admin, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td>
                    <% if(admin.profile_image) { %>
                      <img src="<%= admin.profile_image %>" alt="Admin Image" class="rounded-circle" width="40" height="40" />
                    <% } else { %>
                      <span class="badge bg-secondary">No Image</span>
                    <% } %>
                  </td>
                  <td><strong><%= admin.name %></strong></td>
                  <td><%= admin.email %></td>
                  <td>
                    <div class="dropdown">
                      <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                      </button>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="/editAdmin/<%= admin._id %>">
                          <i class="bx bx-edit-alt me-1"></i> Edit
                        </a>
                        <% if(admin.email !== "darshilgoyani05@gmail.com") { %>
                          <a class="dropdown-item" href="/deleteAdmin/<%= admin._id %>" onclick="return confirm('Are you sure you want to delete this admin?')">
                            <i class="bx bx-trash me-1"></i> Delete
                          </a>
                        <% } %>
                      </div>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="5" class="text-center">
                  No admins found
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <!--/ Hoverable Table rows -->

  </div>
  <!-- / Content -->

</div>

<!-- footer -->
<%- include("../footer") %>

<!-- Hidden data elements to store data for JavaScript -->
<div id="data-container" style="display: none;">
  <div id="admins-data" data-admins='<%= JSON.stringify(admins || []) %>'></div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('adminSearch');
  const sortSelect = document.getElementById('adminSort');
  const tableBody = document.querySelector('.table-border-bottom-0');
  
  // Get data from hidden elements
  const adminsElement = document.getElementById('admins-data');
  
  let originalAdmins = [];
  
  // Safely parse JSON with error handling
  try {
    if (adminsElement) {
      const adminsData = adminsElement.getAttribute('data-admins');
      originalAdmins = JSON.parse(adminsData);
    }
  } catch (e) {
    console.error('Error parsing admins:', e);
    originalAdmins = [];
  }
  
  console.log('Original admins:', originalAdmins);
  
  function filterAndSortAdmins() {
    const searchTerm = searchInput.value.toLowerCase();
    const sortBy = sortSelect.value;
    
    let filteredAdmins = originalAdmins.filter(admin => {
      return admin.name.toLowerCase().includes(searchTerm) || 
             admin.email.toLowerCase().includes(searchTerm);
    });
    
    // Sort admins
    filteredAdmins.sort((a, b) => {
      switch(sortBy) {
        case 'newest':
          return new Date(b.createdAt) - new Date(a.createdAt);
        case 'oldest':
          return new Date(a.createdAt) - new Date(b.createdAt);
        case 'name-asc':
          return a.name.localeCompare(b.name);
        case 'name-desc':
          return b.name.localeCompare(a.name);
        default:
          return 0;
      }
    });
    
    renderAdmins(filteredAdmins);
  }
  
  function renderAdmins(admins) {
    if (admins.length === 0) {
      tableBody.innerHTML = `
        <tr>
          <td colspan="5" class="text-center">
            No admins found
          </td>
        </tr>
      `;
      return;
    }
    
    tableBody.innerHTML = admins.map((admin, index) => `
      <tr>
        <td>${index + 1}</td>
        <td>
          ${admin.profile_image 
            ? `<img src="${admin.profile_image}" alt="Admin Image" class="rounded-circle" width="40" height="40" />`
            : '<span class="badge bg-secondary">No Image</span>'
          }
        </td>
        <td><strong>${admin.name}</strong></td>
        <td>${admin.email}</td>
        <td>
          <div class="dropdown">
            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
              <i class="bx bx-dots-vertical-rounded"></i>
            </button>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="/editAdmin/${admin._id}">
                <i class="bx bx-edit-alt me-1"></i> Edit
              </a>
              ${admin.email !== "darshilgoyani05@gmail.com" ? 
                `<a class="dropdown-item" href="/deleteAdmin/${admin._id}" onclick="return confirm('Are you sure you want to delete this admin?')">
                  <i class="bx bx-trash me-1"></i> Delete
                </a>` : ''
              }
            </div>
          </div>
        </td>
      </tr>
    `).join('');
  }
  
  searchInput.addEventListener('input', filterAndSortAdmins);
  sortSelect.addEventListener('change', filterAndSortAdmins);
});
</script>
