<!-- header -->
<%- include("../header") %>

<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Category Management/</span> View Extra Categories</h4>

    <!-- Hoverable Table rows -->
    <div class="card">
      <div class="table-responsive text-nowrap">
        <table class="table table-hover">
          <thead>
            <tr align="center">
              <th>No.</th>
              <th>Category</th>
              <th>Sub Category</th>
              <th>Extra Category Name</th>
              <th>Image</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody class="table-border-bottom-0">
            <% if(extraCategories && extraCategories.length > 0) { %>
              <% extraCategories.map((extraCategory, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><strong><%= extraCategory.categoryId ? extraCategory.categoryId.name : 'N/A' %></strong></td>
                  <td><%= extraCategory.subCategoryId ? extraCategory.subCategoryId.name : 'N/A' %></td>
                  <td><%= extraCategory.name %></td>
                  <td>
                    <% if(extraCategory.image) { %>
                      <img src="<%= extraCategory.image %>" alt="Extra Category Image" class="rounded-circle" width="40" height="40" />
                    <% } else { %>
                      <span class="badge bg-secondary">No Image</span>
                    <% } %>
                  </td>
                  <td>
                    <div class="dropdown">
                      <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                      </button>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="/editExtraCategory?id=<%= extraCategory._id %>">
                          <i class="bx bx-edit-alt me-1"></i> Edit
                        </a>
                        <a class="dropdown-item" href="/deleteExtraCategory/<%= extraCategory._id %>" onclick="return confirm('Are you sure you want to delete this extra category?')">
                          <i class="bx bx-trash me-1"></i> Delete
                        </a>
                      </div>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center">
                  No extra categories found
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <!--/ Hoverable Table rows -->

  </div>
  <!-- / Content -->

</div>

<!-- footer -->
<%- include("../footer") %>
