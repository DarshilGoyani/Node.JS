<!-- header -->
<%- include("../header")%>

<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Category Management/</span> Add Sub Category</h4>

    <!-- Basic Layout -->
    <div class="row">
      
      <div class="col-xl-6 mx-auto">
        <div class="card mb-4">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Sub Category Information</h5>
          </div>
          <div class="card-body">
            <form method="post" action="/addSubCategory" enctype="multipart/form-data">

              <!-- Select Category -->
              <div class="mb-3">
                <label class="form-label" for="parent-category">Select Category</label>
                <select class="form-select" name="categoryId" id="parent-category" aria-label="Select Category" required>
                  <option value="">Select a category</option>
                  <% if(categories && categories.length > 0) { %>
                    <% categories.map((category) => { %>
                      <option value="<%= category._id %>"><%= category.name %></option>
                    <% }) %>
                  <% } %>
                </select>
              </div>

              <!-- Sub Category Name -->
              <div class="mb-3">
                <label class="form-label" for="subcategory-name">Sub Category Name</label>
                <div class="input-group input-group-merge">
                  <span id="subcategory-name-icon" class="input-group-text">
                    <i class="bx bx-category"></i>
                  </span>
                  <input
                    type="text"
                    name="name"
                    class="form-control"
                    id="subcategory-name"
                    placeholder="Enter sub category name"
                    aria-label="Sub Category Name"
                    aria-describedby="subcategory-name-icon"
                    required
                  />
                </div>
              </div>

              <!-- Sub Category Image -->
              <div class="mb-3">
                <label for="subcategory-image" class="form-label">Sub Category Image</label>
                <input class="form-control" name="image" type="file" id="subcategory-image" accept="image/*" />
              </div>

              <button type="submit" class="btn btn-primary">Add Sub Category</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- / Content -->

</div>

<!-- footer -->
<%- include("../footer")%>
