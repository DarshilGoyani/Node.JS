<!-- header -->
<%- include("../header")%>

<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Category Management/</span> Add Extra Category</h4>

    <!-- Basic Layout -->
    <div class="row">
      
      <div class="col-xl-6 mx-auto">
        <div class="card mb-4">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Extra Category Information</h5>
          </div>
          <div class="card-body">
            <form method="post" action="/addExtraCategory" enctype="multipart/form-data">

              <!-- Select Category -->
              <div class="mb-3">
                <label class="form-label" for="parent-category">Select Category</label>
                <select class="form-select" name="categoryId" id="parent-category" aria-label="Select Category" required>
                  <option value="">Select a category</option>
                  <% if(categories && categories.length > 0) { %>
                    <% categories.map((category) => { %>
                      <option value="<%= category._id %>"><%= category.name %></option>
                    <% }) %>
                  <% } %>
                </select>
              </div>

              <!-- Select Sub Category -->
              <div class="mb-3">
                <label class="form-label" for="parent-subcategory">Select Sub Category</label>
                <select class="form-select" name="subCategoryId" id="parent-subcategory" aria-label="Select Sub Category" required>
                  <option value="">First select a category</option>
                  <% if(subCategories && subCategories.length > 0) { %>
                    <% subCategories.map((subCategory) => { %>
                      <option value="<%= subCategory._id %>" data-category="<%= subCategory.categoryId._id %>" style="display: none;"><%= subCategory.name %></option>
                    <% }) %>
                  <% } %>
                </select>
              </div>

              <!-- Extra Category Name -->
              <div class="mb-3">
                <label class="form-label" for="extracategory-name">Extra Category Name</label>
                <div class="input-group input-group-merge">
                  <span id="extracategory-name-icon" class="input-group-text">
                    <i class="bx bx-category"></i>
                  </span>
                  <input
                    type="text"
                    name="name"
                    class="form-control"
                    id="extracategory-name"
                    placeholder="Enter extra category name"
                    aria-label="Extra Category Name"
                    aria-describedby="extracategory-name-icon"
                    required
                  />
                </div>
              </div>

              <!-- Extra Category Image -->
              <div class="mb-3">
                <label for="extracategory-image" class="form-label">Extra Category Image</label>
                <input class="form-control" name="image" type="file" id="extracategory-image" accept="image/*" />
              </div>

              <button type="submit" class="btn btn-primary">Add Extra Category</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- / Content -->

</div>

<!-- footer -->
<%- include("../footer")%>

<!-- Hidden data elements to store data for JavaScript -->
<div id="data-container" style="display: none;">
  <div id="subcategories-data" data-subcategories='<%= JSON.stringify(subCategories || []) %>'></div>
  <div id="categories-data" data-categories='<%= JSON.stringify(categories || []) %>'></div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const categorySelect = document.getElementById('parent-category');
  const subCategorySelect = document.getElementById('parent-subcategory');
  
  // Get data from hidden elements
  const subCategoriesElement = document.getElementById('subcategories-data');
  const categoriesElement = document.getElementById('categories-data');
  
  let allSubCategories = [];
  let allCategories = [];
  
  // Safely parse JSON with error handling
  try {
    const subCategoriesData = subCategoriesElement.getAttribute('data-subcategories');
    allSubCategories = JSON.parse(subCategoriesData);
  } catch (e) {
    console.error('Error parsing subCategories:', e);
    allSubCategories = [];
  }
  
  try {
    const categoriesData = categoriesElement.getAttribute('data-categories');
    allCategories = JSON.parse(categoriesData);
  } catch (e) {
    console.error('Error parsing categories:', e);
    allCategories = [];
  }
  
  console.log('All subCategories:', allSubCategories);
  console.log('Categories available:', allCategories);
  
  categorySelect.addEventListener('change', function() {
    const selectedCategoryId = this.value;
    console.log('Selected category ID:', selectedCategoryId);
    
    // Reset subcategory dropdown
    subCategorySelect.innerHTML = '<option value="">Select a sub category</option>';
    
    if (selectedCategoryId && allSubCategories.length > 0) {
      // Get all subcategory options and filter them
      const filteredSubCategories = allSubCategories.filter(function(subCategory) {
        console.log('Checking subCategory:', subCategory.name, 'with categoryId:', subCategory.categoryId?._id);
        return subCategory.categoryId && subCategory.categoryId._id === selectedCategoryId;
      });
      
      console.log('Filtered subCategories:', filteredSubCategories);
      
      // Add filtered subcategories to dropdown
      filteredSubCategories.forEach(function(subCategory) {
        const option = document.createElement('option');
        option.value = subCategory._id;
        option.textContent = subCategory.name;
        subCategorySelect.appendChild(option);
      });
    }
  });
});
</script>
