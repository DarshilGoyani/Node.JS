<!-- header -->
<%- include("../header") %>

<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h4 class="fw-bold py-3 mb-0"><span class="text-muted fw-light">Category Management/</span> View Categories</h4>
      <a href="/addCategory" class="btn btn-primary">
        <i class="bx bx-plus me-1"></i> Add Category
      </a>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-8">
            <input type="text" id="categorySearch" class="form-control" placeholder="Search categories by name...">
          </div>
          <div class="col-md-4">
            <select id="categorySort" class="form-select">
              <option value="newest">Newest First</option>
              <option value="oldest">Oldest First</option>
              <option value="name-asc">Name (A-Z)</option>
              <option value="name-desc">Name (Z-A)</option>
            </select>
          </div>
        </div>
      </div>
    </div>

    <!-- Hoverable Table rows -->
    <div class="card">
      <div class="table-responsive text-nowrap">
        <table class="table table-hover">
          <thead>
            <tr align="center">
              <th>No.</th>
              <th>Category Name</th>
              <th>Image</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody class="table-border-bottom-0">
            <% if(categories && categories.length > 0) { %>
              <% categories.map((category, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><strong><%= category.name %></strong></td>
                  <td>
                    <% if(category.image) { %>
                      <img src="<%= category.image %>" alt="Category Image" class="rounded-circle" width="40" height="40" />
                    <% } else { %>
                      <span class="badge bg-secondary">No Image</span>
                    <% } %>
                  </td>
                  <td>
                    <div class="dropdown">
                      <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                      </button>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="/editCategory?id=<%= category._id %>">
                          <i class="bx bx-edit-alt me-1"></i> Edit
                        </a>
                        <a class="dropdown-item" href="/deleteCategory/<%= category._id %>" onclick="return confirm('Are you sure you want to delete this category?')">
                          <i class="bx bx-trash me-1"></i> Delete
                        </a>
                      </div>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="4" class="text-center">
                  No categories found
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <!--/ Hoverable Table rows -->

  </div>
  <!-- / Content -->

</div>

<!-- footer -->
<%- include("../footer") %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('categorySearch');
  const sortSelect = document.getElementById('categorySort');
  const tableBody = document.querySelector('.table-border-bottom-0');
  
  // Safely parse JSON with error handling
  let originalCategories = [];
  
  try {
    originalCategories = JSON.parse('<%- JSON.stringify(categories || []) %>');
  } catch (e) {
    console.error('Error parsing categories:', e);
  }
  
  function filterAndSortCategories() {
    const searchTerm = searchInput.value.toLowerCase();
    const sortBy = sortSelect.value;
    
    let filteredCategories = originalCategories.filter(category => {
      return category.name.toLowerCase().includes(searchTerm);
    });
    
    // Sort categories
    filteredCategories.sort((a, b) => {
      switch(sortBy) {
        case 'newest':
          return new Date(b.createdAt) - new Date(a.createdAt);
        case 'oldest':
          return new Date(a.createdAt) - new Date(b.createdAt);
        case 'name-asc':
          return a.name.localeCompare(b.name);
        case 'name-desc':
          return b.name.localeCompare(a.name);
        default:
          return 0;
      }
    });
    
    renderCategories(filteredCategories);
  }
  
  function renderCategories(categories) {
    if (categories.length === 0) {
      tableBody.innerHTML = `
        <tr>
          <td colspan="4" class="text-center">
            No categories found
          </td>
        </tr>
      `;
      return;
    }
    
    tableBody.innerHTML = categories.map((category, index) => `
      <tr>
        <td>${index + 1}</td>
        <td><strong>${category.name}</strong></td>
        <td>
          ${category.image 
            ? `<img src="${category.image}" alt="Category Image" class="rounded-circle" width="40" height="40" />`
            : '<span class="badge bg-secondary">No Image</span>'
          }
        </td>
        <td>
          <div class="dropdown">
            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
              <i class="bx bx-dots-vertical-rounded"></i>
            </button>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="/editCategory?id=${category._id}">
                <i class="bx bx-edit-alt me-1"></i> Edit
              </a>
              <a class="dropdown-item" href="/deleteCategory/${category._id}" onclick="return confirm('Are you sure you want to delete this category?')">
                <i class="bx bx-trash me-1"></i> Delete
              </a>
            </div>
          </div>
        </td>
      </tr>
    `).join('');
  }
  
  searchInput.addEventListener('input', filterAndSortCategories);
  sortSelect.addEventListener('change', filterAndSortCategories);
});
</script>