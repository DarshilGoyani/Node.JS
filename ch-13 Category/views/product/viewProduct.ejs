<!-- header -->
<%- include("../header") %>

<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h4 class="fw-bold py-3 mb-0"><span class="text-muted fw-light">Product Management/</span> View Products</h4>
      <a href="/addProduct" class="btn btn-primary">
        <i class="bx bx-plus me-1"></i> Add Product
      </a>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-2">
            <select id="categoryFilter" class="form-select">
              <option value="">All Categories</option>
              <% if(categories && categories.length > 0) { %>
                <% categories.map((category) => { %>
                  <option value="<%= category._id %>"><%= category.name %></option>
                <% }) %>
              <% } %>
            </select>
          </div>
          <div class="col-md-2">
            <select id="subCategoryFilter" class="form-select">
              <option value="">All Sub Categories</option>
            </select>
          </div>
          <div class="col-md-2">
            <select id="extraCategoryFilter" class="form-select">
              <option value="">All Extra Categories</option>
            </select>
          </div>
          <div class="col-md-2">
            <select id="statusFilter" class="form-select">
              <option value="">All Status</option>
              <option value="Active">Active</option>
              <option value="Inactive">Inactive</option>
            </select>
          </div>
          <div class="col-md-2">
            <input type="text" id="productSearch" class="form-control" placeholder="Search products...">
          </div>
          <div class="col-md-2">
            <select id="productSort" class="form-select">
              <option value="newest">Newest First</option>
              <option value="oldest">Oldest First</option>
              <option value="name-asc">Name (A-Z)</option>
              <option value="name-desc">Name (Z-A)</option>
              <option value="price-low">Price (Low to High)</option>
              <option value="price-high">Price (High to Low)</option>
            </select>
          </div>
        </div>
      </div>
    </div>

    <!-- Hoverable Table rows -->
    <div class="card">
      <div class="table-responsive text-nowrap">
        <table class="table table-hover">
          <thead>
            <tr align="center">
              <th>No.</th>
              <th>Product Image</th>
              <th>Product Name</th>
              <th>Category</th>
              <th>Sub Category</th>
              <th>Extra Category</th>
              <th>Price</th>
              <th>Stock</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody class="table-border-bottom-0">
            <% if(products && products.length > 0) { %>
              <% products.map((product, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td>
                    <% if(product.image) { %>
                      <img src="<%= product.image %>" alt="Product Image" class="rounded-circle" width="40" height="40" />
                    <% } else { %>
                      <span class="badge bg-secondary">No Image</span>
                    <% } %>
                  </td>
                  <td><strong><%= product.name %></strong></td>
                  <td><%= product.categoryId ? product.categoryId.name : 'N/A' %></td>
                  <td><%= product.subCategoryId ? product.subCategoryId.name : 'N/A' %></td>
                  <td><%= product.extraCategoryId ? product.extraCategoryId.name : 'N/A' %></td>
                  <td><%= product.price ? '$' + product.price.toFixed(2) : 'N/A' %></td>
                  <td>
                    <span class="badge <%= product.stock > 10 ? 'bg-success' : product.stock > 0 ? 'bg-warning' : 'bg-danger' %>">
                      <%= product.stock || 0 %>
                    </span>
                  </td>
                  <td>
                    <span class="badge <%= product.status === 'Active' ? 'bg-success' : 'bg-danger' %>">
                      <%= product.status || 'Active' %>
                    </span>
                  </td>
                  <td>
                    <div class="dropdown">
                      <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                      </button>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="/editProduct?id=<%= product._id %>">
                          <i class="bx bx-edit-alt me-1"></i> Edit
                        </a>
                        <a class="dropdown-item" href="/deleteProduct/<%= product._id %>" onclick="return confirm('Are you sure you want to delete this product?')">
                          <i class="bx bx-trash me-1"></i> Delete
                        </a>
                      </div>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="10" class="text-center">
                  No products found
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <!--/ Hoverable Table rows -->

  </div>
  <!-- / Content -->

</div>

<!-- footer -->
<%- include("../footer") %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const categoryFilter = document.getElementById('categoryFilter');
  const subCategoryFilter = document.getElementById('subCategoryFilter');
  const extraCategoryFilter = document.getElementById('extraCategoryFilter');
  const statusFilter = document.getElementById('statusFilter');
  const searchInput = document.getElementById('productSearch');
  const sortSelect = document.getElementById('productSort');
  const tableBody = document.querySelector('.table-border-bottom-0');
  
  // Safely parse JSON with error handling
  let originalProducts = [];
  let allCategories = [];
  let allSubCategories = [];  
  let allExtraCategories = [];
  
  try {
    originalProducts = JSON.parse('<%- JSON.stringify(products || []) %>');
  } catch (e) {
    console.error('Error parsing products:', e);
  }
  
  try {
    allCategories = JSON.parse('<%- JSON.stringify(categories || []) %>');
  } catch (e) {
    console.error('Error parsing categories:', e);
  }
  
  try {
    allSubCategories = JSON.parse('<%- JSON.stringify(subCategories || []) %>');
  } catch (e) {
    console.error('Error parsing subCategories:', e);
  }
  
  try {
    allExtraCategories = JSON.parse('<%- JSON.stringify(extraCategories || []) %>');
  } catch (e) {
    console.error('Error parsing extraCategories:', e);
  }
  
  // Populate sub categories based on selected category
  function updateSubCategories() {
    const selectedCategoryId = categoryFilter.value;
    subCategoryFilter.innerHTML = '<option value="">All Sub Categories</option>';
    
    if (selectedCategoryId) {
      const filteredSubCategories = allSubCategories.filter(sub => 
        sub.categoryId && sub.categoryId._id === selectedCategoryId
      );
      
      filteredSubCategories.forEach(sub => {
        const option = document.createElement('option');
        option.value = sub._id;
        option.textContent = sub.name;
        subCategoryFilter.appendChild(option);
      });
    } else {
      allSubCategories.forEach(sub => {
        const option = document.createElement('option');
        option.value = sub._id;
        option.textContent = sub.name;
        subCategoryFilter.appendChild(option);
      });
    }
  }
  
  // Populate extra categories based on selected sub category
  function updateExtraCategories() {
    const selectedSubCategoryId = subCategoryFilter.value;
    extraCategoryFilter.innerHTML = '<option value="">All Extra Categories</option>';
    
    if (selectedSubCategoryId) {
      const filteredExtraCategories = allExtraCategories.filter(extra => 
        extra.subCategoryId && extra.subCategoryId._id === selectedSubCategoryId
      );
      
      filteredExtraCategories.forEach(extra => {
        const option = document.createElement('option');
        option.value = extra._id;
        option.textContent = extra.name;
        extraCategoryFilter.appendChild(option);
      });
    } else {
      allExtraCategories.forEach(extra => {
        const option = document.createElement('option');
        option.value = extra._id;
        option.textContent = extra.name;
        extraCategoryFilter.appendChild(option);
      });
    }
  }
  
  function filterAndSortProducts() {
    const categoryFilterValue = categoryFilter.value;
    const subCategoryFilterValue = subCategoryFilter.value;
    const extraCategoryFilterValue = extraCategoryFilter.value;
    const statusFilterValue = statusFilter.value;
    const searchTerm = searchInput.value.toLowerCase();
    const sortBy = sortSelect.value;
    
    let filteredProducts = originalProducts.filter(product => {
      const matchesCategory = !categoryFilterValue || (product.categoryId && product.categoryId._id === categoryFilterValue);
      const matchesSubCategory = !subCategoryFilterValue || (product.subCategoryId && product.subCategoryId._id === subCategoryFilterValue);
      const matchesExtraCategory = !extraCategoryFilterValue || (product.extraCategoryId && product.extraCategoryId._id === extraCategoryFilterValue);
      const matchesStatus = !statusFilterValue || product.status === statusFilterValue;
      const matchesSearch = product.name.toLowerCase().includes(searchTerm);
      return matchesCategory && matchesSubCategory && matchesExtraCategory && matchesStatus && matchesSearch;
    });
    
    // Sort products
    filteredProducts.sort((a, b) => {
      switch(sortBy) {
        case 'newest':
          return new Date(b.createdAt) - new Date(a.createdAt);
        case 'oldest':
          return new Date(a.createdAt) - new Date(b.createdAt);
        case 'name-asc':
          return a.name.localeCompare(b.name);
        case 'name-desc':
          return b.name.localeCompare(a.name);
        case 'price-low':
          return (a.price || 0) - (b.price || 0);
        case 'price-high':
          return (b.price || 0) - (a.price || 0);
        default:
          return 0;
      }
    });
    
    renderProducts(filteredProducts);
  }
  
  function renderProducts(products) {
    if (products.length === 0) {
      tableBody.innerHTML = `
        <tr>
          <td colspan="10" class="text-center">
            No products found
          </td>
        </tr>
      `;
      return;
    }
    
    tableBody.innerHTML = products.map((product, index) => `
      <tr>
        <td>${index + 1}</td>
        <td>
          ${product.image 
            ? `<img src="${product.image}" alt="Product Image" class="rounded-circle" width="40" height="40" />`
            : '<span class="badge bg-secondary">No Image</span>'
          }
        </td>
        <td><strong>${product.name}</strong></td>
        <td>${product.categoryId ? product.categoryId.name : 'N/A'}</td>
        <td>${product.subCategoryId ? product.subCategoryId.name : 'N/A'}</td>
        <td>${product.extraCategoryId ? product.extraCategoryId.name : 'N/A'}</td>
        <td>${product.price ? '$' + product.price.toFixed(2) : 'N/A'}</td>
        <td>
          <span class="badge ${product.stock > 10 ? 'bg-success' : product.stock > 0 ? 'bg-warning' : 'bg-danger'}">
            ${product.stock || 0}
          </span>
        </td>
        <td>
          <span class="badge ${product.status === 'Active' ? 'bg-success' : 'bg-danger'}">
            ${product.status || 'Active'}
          </span>
        </td>
        <td>
          <div class="dropdown">
            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
              <i class="bx bx-dots-vertical-rounded"></i>
            </button>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="/editProduct?id=${product._id}">
                <i class="bx bx-edit-alt me-1"></i> Edit
              </a>
              <a class="dropdown-item" href="/deleteProduct/${product._id}" onclick="return confirm('Are you sure you want to delete this product?')">
                <i class="bx bx-trash me-1"></i> Delete
              </a>
            </div>
          </div>
        </td>
      </tr>
    `).join('');
  }
  
  categoryFilter.addEventListener('change', function() {
    updateSubCategories();
    updateExtraCategories();
    filterAndSortProducts();
  });
  subCategoryFilter.addEventListener('change', function() {
    updateExtraCategories();
    filterAndSortProducts();
  });
  extraCategoryFilter.addEventListener('change', filterAndSortProducts);
  statusFilter.addEventListener('change', filterAndSortProducts);
  searchInput.addEventListener('input', filterAndSortProducts);
  sortSelect.addEventListener('change', filterAndSortProducts);
  
  // Initialize filters
  updateSubCategories();
  updateExtraCategories();
});
</script>
